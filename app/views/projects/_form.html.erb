<%= form_for @project do |f| %>
	<% if @project.errors.any? %>
		<h2><%= pluralize(@project.errors.count, "error") %>
			 prevented this project from saving:
		</h2>
		<ul>
			<% @project.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title %><br>
	<%= f.text_field :title %><br>

	<%= f.label :description, "Write about your project here" %><br>
	<%= f.text_area :description %><br>

	<%= f.label :link %><br>
	<%= f.text_field :link %><br>

	<br>
	<br>

	<%= f.submit %>
		

<% end %>